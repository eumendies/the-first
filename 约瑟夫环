#include<stdio.h>
int main()
{
 int n,i,j=0,death=0;
 printf("please enter the total number:");
 scanf("%d",&n);
 int a[n+1];
 for(i=1;i<=n;i++) //将1到n的元素初始化为0，以0代表存活
  {
   a[i]=0;
  }
 for(i=1;i<=n;i++)
 {
  if(a[i]==0) j++;  //存活的元素可以进行报数
  if(j==3)   //报数达到3时将0置为1，并计数
  {
    a[i]=1;
    j=0;
    death++;
  }
  if(i==n && death!=(n-1)) i=0;  //到达最后一个元素时若死亡人数未达到n-1则从头开始继续报数，i置为0后执行i++又变为1
 }
 for(i=1;i<=n;i++)//遍历每个元素找出最后一个存活的0
 {
  if(a[i]==0) printf("result is %d\n",i);
 }
}
